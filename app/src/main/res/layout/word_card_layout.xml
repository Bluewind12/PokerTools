<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/cardView2"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">
    <!-- 以下に追加 -->
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/wordEngText" android:layout_weight="1"
                android:padding="8dp" tools:text="イング"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/wordJpText" android:layout_weight="1"
                android:textSize="24sp" android:padding="8dp" android:textColor="@color/colorAccent" tools:text="題名"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/wordDesText" android:layout_weight="1"
                android:padding="8dp" tools:text="説明"/>
    </LinearLayout>
</android.support.v7.widget.CardView>